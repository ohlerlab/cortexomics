    | grep -ve 'NH:i:1' \
    | awk -vFS="_" -vOFS="\t" '{{print $1,$2-1,$2}}' \
    | uniq \
    | bedtools sort -i /dev/stdin -faidx {trsizes} \
    | bedtools merge  -prec 1 \
