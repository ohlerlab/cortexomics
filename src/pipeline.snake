    output: 'trim_reads/{sample}/{fastq}'
    wildcard_constraints: sample='.*(ribo|_Poly|_80S).*'
    run:
        sample = wildcards['sample']
        shell(r"""
       set -evx
     
       OUTDIR=$(dirname {output})
       mkdir -p  $OUTDIR
     
       {REMOVE8NBIN} {input} {output}

       gzip -f {output}
       mv {output}.gz {output}

     """)


