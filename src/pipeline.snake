  MY_TMP_DIR='mappatest'
 
  set -x

  samtools view -h {params.bam}  | sed -e '/^@PG/Q' \
   | cut -f 2,3 | sed 's/[SL]N://g' | sed 's/ /_/g' \
   | tail -n+2 >${{MY_TMP_DIR}}/chrsizes

